<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/track_image"
            android:scaleType="centerCrop"
            android:padding="5dp"
            tools:src="@drawable/sample_image_large"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/details_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/track_image"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/track_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Name: "
                android:paddingBottom="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TitleStyle"/>

            <TextView
                android:id="@+id/track_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air Bud: Pup Star 1 (Pup Star)"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/track_name_label"
                style="@style/ValueStyle"/>

            <TextView
                android:id="@+id/price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/track_name_label"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TitleStyle"/>

            <TextView
                android:id="@+id/price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.99"
                android:paddingBottom="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/track_name_value"
                app:layout_constraintStart_toEndOf="@+id/price_label"
                style="@style/ValueStyle"/>

            <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre:"
                android:paddingRight="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/price_label"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TitleStyle"/>

            <TextView
                android:id="@+id/genre_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kids &amp; Family"
                app:layout_constraintTop_toBottomOf="@+id/price_value"
                app:layout_constraintStart_toEndOf="@+id/genre"
                style="@style/ValueStyle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>